					<h4>Column 1</h4>
					<!--begin nesting-->
					<div class="row">
						<div class="col-sm-4" style="background-color: green">
							<h4>Column 3</h4>
						</div>
						<div class="col-sm-4" style="background-color: yellow">
							<h4>Column 4</h4>
						</div>
						<div class="col-sm-4" style="background-color: orange">
							<h4>Column 5</h4>
						</div>							
					</div>
					<!--end nesting-->
				</div>
				<div class="col-sm-6" style="background-color: red">
					<h4>Column 2</h4>
					<!--begin nesting-->
					<div class="row">
						<div class="col-sm-12" style="background-color: green">
							<h4>Column 6</h4>
						</div>				
					</div>
					<!--end nesting-->
				</div>
			</div>
		</div>
